{% extends 'base.html.twig' %}

{% block title %}Détails Livraison{% endblock %}

{% block body %}
<style>
    /* Style pour les boutons marron */
    .btn-marron {
        background-color: #C4704B;
        color: white !important;
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        border-radius: 8px;
        display: inline-block;
        transition: 0.3s;
        font-weight: 500;
        cursor: pointer;
    }
    .btn-marron:hover {
        background-color: #C4704B;
        transform: translateY(-2px);
    }

    /* Conteneur principal centré */
    .page-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 90vh;
        background-color: #eee; /* Fond beige très léger pour le contraste */
    }

    /* La carte de détails */
    .info-card {
        background: white;
        width: 100%;
        max-width: 500px;
        padding: 40px;
        border-radius: 15px;
        border: 2px solid #C4704B; /* Bordure marron tracée */
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }

    .info-group {
        margin-bottom: 20px;
        border-bottom: 1px solid #eee;
        padding-bottom: 10px;
    }

    .info-label {
        display: block;
        font-size: 0.8rem;
        color: #888;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .info-value {
        display: block;
        font-size: 1.2rem;
        color: #333;
        font-weight: 600;
        margin-top: 5px;
    }

    .actions-container {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-top: 30px;
    }
</style>

<div class="page-container">
    <div class="info-card">
        <h2 style="text-align: center; color: #C4704B; margin-bottom: 30px;">Détails de la Livraison</h2>

        
        <div class="info-group">
            <span class="info-value">Date prévue</span>
            <span class="info-label">{{ livraison.datelivraison ? livraison.datelivraison|date('d F Y à H:i') : 'Non planifiée' }}</span>
        </div>

        <div class="info-group">
            <span class="info-value">Adresse de livraison</span>
            <span class="info-label">{{ livraison.addresslivraison }}</span>
        </div>

        <div class="info-group">
            <span class="info-value">Statut</span>
            <span class="info-label" style="color: #C4704B;">{{ livraison.statutlivraison }}</span>
        </div>

        <div class="actions-container">
            <a href="{{ path('app_livraison_index') }}" class="btn-marron">Retour</a>
            <a href="{{ path('app_livraison_edit', {'id': livraison.id}) }}" class="btn-marron">Modifier</a>
            
            <div class="delete-wrapper">
                {{ include('livraison/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>

<script>

    document.addEventListener("DOMContentLoaded", function() {
        const delBtn = document.querySelector('.delete-wrapper button');
        if (delBtn) {
            delBtn.classList.add('btn-marron');
            delBtn.style.backgroundColor = "#C4704B"; 
        }
    });
</script>
{% endblock %}