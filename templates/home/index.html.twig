{% extends 'base.html.twig' %}

{% block title %}AfkArt | L'art qui donne une seconde vie{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
  :root {
    --color-cream: #FAF7F2;
    --color-cream-dark: #F5F0E8;
    --color-terracotta: #C4704B;
    --color-terracotta-dark: #A85D3B;
    --color-sage: #8FAE8B;
    --color-sage-light: #B8D4B4;
    --color-brown: #3D3229;
    --color-brown-light: #5C4A3D;
  }
  
  * { margin: 0; padding: 0; box-sizing: border-box; }
  
  body {
    font-family: 'Outfit', system-ui, sans-serif;
    background-color: var(--color-cream);
    color: var(--color-brown);
    line-height: 1.6;
  }
  
  h1, h2, h3, h4 {
    font-family: 'Cormorant Garamond', Georgia, serif;
    font-weight: 500;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }
  
  /* Header */
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(250, 247, 242, 0.95);
    backdrop-filter: blur(8px);
    z-index: 100;
    border-bottom: 1px solid rgba(61, 50, 41, 0.1);
  }
  
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 1.5rem;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .logo {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.75rem;
    font-weight: 600;
    color: var(--color-brown);
    text-decoration: none;
  }
  
  .logo span {
    color: var(--color-terracotta);
  }
  
  .nav {
    display: flex;
    gap: 2rem;
  }
  
  .nav a {
    color: var(--color-brown-light);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s;
  }
  
  .nav a:hover {
    color: var(--color-terracotta);
  }
  
  .header-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.75rem 1.5rem;
    border-radius: 9999px;
    font-size: 0.95rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
    cursor: pointer;
    border: none;
  }
  
  .btn-primary {
    background: var(--color-terracotta);
    color: white;
  }
  
  .btn-primary:hover {
    background: var(--color-terracotta-dark);
  }
  
  .btn-outline {
    background: transparent;
    border: 1px solid var(--color-brown);
    color: var(--color-brown);
  }
  
  .btn-outline:hover {
    background: var(--color-brown);
    color: white;
  }
  
  .btn-secondary {
    background: var(--color-sage);
    color: white;
  }
  
  .btn-secondary:hover {
    background: #7A9A76;
  }
  
  /* Hero Section */
  .hero {
    padding: 8rem 0 5rem;
    min-height: 90vh;
    display: flex;
    align-items: center;
  }
  
  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }
  
  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--color-sage-light);
    color: var(--color-brown);
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
  }
  
  .hero h1 {
    font-size: 3.5rem;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--color-brown);
  }
  
  .hero h1 span {
    color: var(--color-terracotta);
  }
  
  .hero p {
    font-size: 1.125rem;
    color: var(--color-brown-light);
    margin-bottom: 2rem;
    max-width: 500px;
  }
  
  .hero-buttons {
    display: flex;
    gap: 1rem;
    margin-bottom: 3rem;
  }
  
  .hero-stats {
    display: flex;
    gap: 3rem;
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-number {
    font-family: 'Cormorant Garamond', serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: var(--color-terracotta);
  }
  
  .stat-label {
    font-size: 0.875rem;
    color: var(--color-brown-light);
  }
  
  .hero-visual {
    position: relative;
  }
  
  .hero-image-main {
    width: 100%;
    height: 500px;
    object-fit: cover;
    border-radius: 1.5rem;
  }
  
  .hero-floating-card {
    position: absolute;
    bottom: 2rem;
    left: -2rem;
    background: white;
    padding: 1rem 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .floating-icon {
    width: 40px;
    height: 40px;
    background: var(--color-sage-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-sage);
  }
  
  /* Categories Section */
  .categories {
    padding: 5rem 0;
    background: white;
  }
  
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }
  
  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--color-brown);
  }
  
  .section-header p {
    color: var(--color-brown-light);
    max-width: 600px;
    margin: 0 auto;
  }
  
  .categories-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .category-card {
    background: var(--color-cream);
    border-radius: 1.5rem;
    padding: 2rem;
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
    cursor: pointer;
  }
  
  .category-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }
  
  .category-icon {
    width: 80px;
    height: 80px;
    background: var(--color-sage-light);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 2rem;
  }
  
  .category-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.75rem;
    color: var(--color-brown);
  }
  
  .category-card p {
    font-size: 0.95rem;
    color: var(--color-brown-light);
  }
  
  /* Artisans Section */
  .artisans {
    padding: 5rem 0;
  }
  
  .artisans-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1.5rem;
  }
  
  .artisan-card {
    position: relative;
    border-radius: 1.5rem;
    overflow: hidden;
    aspect-ratio: 3/4;
    cursor: pointer;
  }
  
  .artisan-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }
  
  .artisan-card:hover img {
    transform: scale(1.05);
  }
  
  .artisan-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(0,0,0,0.7), transparent);
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: 1.5rem;
    color: white;
  }
  
  .artisan-specialty {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
    margin-bottom: 0.25rem;
  }
  
  .artisan-name {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  
  .artisan-rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
  }
  
  .star {
    color: #FBBF24;
  }
  
  /* Gallery Section */
  .gallery {
    padding: 5rem 0;
    background: white;
  }
  
  .gallery-filters {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }
  
  .filter-btn {
    padding: 0.625rem 1.25rem;
    border-radius: 9999px;
    border: 1px solid var(--color-border, #ddd);
    background: transparent;
    color: var(--color-brown-light);
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .filter-btn:hover,
  .filter-btn.active {
    background: var(--color-terracotta);
    border-color: var(--color-terracotta);
    color: white;
  }
  
  .gallery-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .artwork-card {
    background: var(--color-cream);
    border-radius: 1.5rem;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .artwork-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }
  
  .artwork-image {
    position: relative;
    aspect-ratio: 4/3;
    overflow: hidden;
  }
  
  .artwork-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .artwork-badge {
    position: absolute;
    top: 1rem;
    left: 1rem;
    background: var(--color-sage);
    color: white;
    padding: 0.375rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 500;
  }
  
  .artwork-favorite {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 36px;
    height: 36px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.2s;
    border: none;
  }
  
  .artwork-favorite:hover {
    background: var(--color-terracotta);
    color: white;
  }
  
  .artwork-info {
    padding: 1.5rem;
  }
  
  .artwork-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--color-brown);
  }
  
  .artwork-artist {
    font-size: 0.875rem;
    color: var(--color-brown-light);
    margin-bottom: 1rem;
  }
  
  .artwork-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .artwork-price {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-terracotta);
  }
  
  .artwork-materials {
    font-size: 0.75rem;
    color: var(--color-sage);
    background: var(--color-sage-light);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
  }
  
  /* Blog Section */
  .blog {
    padding: 5rem 0;
  }
  
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .blog-card {
    background: white;
    border-radius: 1.5rem;
    overflow: hidden;
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
  }
  
  .blog-image {
    aspect-ratio: 16/10;
    overflow: hidden;
  }
  
  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .blog-content {
    padding: 1.5rem;
  }
  
  .blog-meta {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    font-size: 0.875rem;
  }
  
  .blog-date {
    color: var(--color-brown-light);
  }
  
  .blog-category {
    background: var(--color-sage-light);
    color: var(--color-brown);
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
  }
  
  .blog-title {
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.375rem;
    margin-bottom: 0.75rem;
    color: var(--color-brown);
  }
  
  .blog-excerpt {
    font-size: 0.95rem;
    color: var(--color-brown-light);
    margin-bottom: 1rem;
  }
  
  .blog-link {
    color: var(--color-terracotta);
    text-decoration: none;
    font-weight: 500;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .blog-link:hover {
    text-decoration: underline;
  }
  
  /* Testimonials */
  .testimonials {
    padding: 5rem 0;
    background: var(--color-sage-light);
  }
  
  .testimonials-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .testimonial-card {
    background: white;
    border-radius: 1.5rem;
    padding: 2rem;
  }
  
  .testimonial-quote {
    font-size: 2rem;
    color: var(--color-sage);
    margin-bottom: 1rem;
  }
  
  .testimonial-text {
    font-size: 1rem;
    color: var(--color-brown-light);
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }
  
  .testimonial-author {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .testimonial-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    object-fit: cover;
  }
  
  .testimonial-name {
    font-weight: 600;
    color: var(--color-brown);
  }
  
  .testimonial-role {
    font-size: 0.875rem;
    color: var(--color-brown-light);
  }
  
  /* Newsletter */
  .newsletter {
    padding: 5rem 0;
    background: var(--color-terracotta);
    color: white;
  }
  
  .newsletter-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .newsletter h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: white;
  }
  
  .newsletter p {
    opacity: 0.9;
    margin-bottom: 2rem;
  }
  
  .newsletter-form {
    display: flex;
    gap: 1rem;
    max-width: 450px;
    margin: 0 auto;
  }
  
  .newsletter-input {
    flex: 1;
    padding: 1rem 1.5rem;
    border-radius: 9999px;
    border: none;
    font-size: 1rem;
    outline: none;
  }
  
  .newsletter-btn {
    background: var(--color-brown);
    color: white;
    padding: 1rem 2rem;
    border-radius: 9999px;
    border: none;
    font-weight: 500;
    cursor: pointer;
    transition: background 0.2s;
  }
  
  .newsletter-btn:hover {
    background: var(--color-brown-light);
  }
  
  /* Footer */
  .footer {
    padding: 4rem 0 2rem;
    background: var(--color-brown);
    color: white;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }
  
  .footer-brand p {
    opacity: 0.7;
    margin: 1rem 0 1.5rem;
    line-height: 1.7;
  }
  
  .footer-social {
    display: flex;
    gap: 1rem;
  }
  
  .footer-social a {
    width: 40px;
    height: 40px;
    border: 1px solid rgba(255,255,255,0.2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    transition: all 0.2s;
  }
  
  .footer-social a:hover {
    background: var(--color-terracotta);
    border-color: var(--color-terracotta);
  }
  
  .footer-column h4 {
    font-size: 1.125rem;
    margin-bottom: 1.5rem;
    color: white;
  }
  
  .footer-column ul {
    list-style: none;
  }
  
  .footer-column li {
    margin-bottom: 0.75rem;
  }
  
  .footer-column a {
    color: rgba(255,255,255,0.7);
    text-decoration: none;
    transition: color 0.2s;
  }
  
  .footer-column a:hover {
    color: var(--color-terracotta);
  }
  
  .footer-bottom {
    border-top: 1px solid rgba(255,255,255,0.1);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.875rem;
    opacity: 0.7;
  }
  
  .footer-bottom-links {
    display: flex;
    gap: 2rem;
  }
  
  .footer-bottom-links a {
    color: rgba(255,255,255,0.7);
    text-decoration: none;
  }
  
  .footer-bottom-links a:hover {
    color: white;
  }
  
  /* Responsive */
  @media (max-width: 1024px) {
    .hero-grid { grid-template-columns: 1fr; gap: 3rem; }
    .artisans-grid { grid-template-columns: repeat(2, 1fr); }
    .gallery-grid { grid-template-columns: repeat(2, 1fr); }
    .blog-grid { grid-template-columns: repeat(2, 1fr); }
    .testimonials-grid { grid-template-columns: repeat(2, 1fr); }
    .footer-grid { grid-template-columns: repeat(2, 1fr); }
  }
  
  @media (max-width: 768px) {
    .nav { display: none; }
    .hero h1 { font-size: 2.5rem; }
    .categories-grid { grid-template-columns: 1fr; }
    .artisans-grid { grid-template-columns: 1fr; }
    .gallery-grid { grid-template-columns: 1fr; }
    .blog-grid { grid-template-columns: 1fr; }
    .testimonials-grid { grid-template-columns: 1fr; }
    .footer-grid { grid-template-columns: 1fr; }
    .newsletter-form { flex-direction: column; }
  }
</style>
