    <style>
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #FAF7F2;
        }

        /* ===== LAYOUT ===== */
        .container {
            display: flex;
            min-height: 100vh;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            width: 260px;
            background-color: #1f2937;
            color: #fff;
            padding: 20px;
        }

        .logo {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .logo-icon {
            width: 36px;
            height: 36px;
            margin-right: 10px;
        }

        .logo-text {
            font-size: 1.4rem;
            font-weight: bold;
        }

        .nav-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            opacity: 0.6;
            margin: 20px 0 10px;
        }

        .nav-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav-item a {
            display: flex;
            align-items: center;
            padding: 10px;
            color: #fff;
            text-decoration: none;
            border-radius: 6px;
            margin-bottom: 5px;
        }

        .nav-item a:hover,
        .nav-item.active a {
            background-color: #374151;
        }

        /* ===== MAIN CONTENT ===== */
        .content {
            flex: 1;
            padding: 40px;
        }

        .form-container {
            max-width: 500px;
            margin: auto;
            background: #fff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 2px 12px rgba(0,0,0,0.15);
        }

        h1 {
            text-align: center;
            margin-bottom: 25px;
            color: #C4704B;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        input, select, textarea {
            width: 100%;
            padding: 8px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

        textarea {
            min-height: 80px;
        }

        .date-group {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 8px;
        }

        .form-actions {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        button {
            background-color: #C4704B;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
        }

        button:hover {
            background-color: #A85C3D;
        }

        a.back-link {
            border: 1px solid #C4704B;
            color: #C4704B;
            padding: 8px 16px;
            border-radius: 6px;
            text-decoration: none;
        }

        a.back-link:hover {
            background-color: #C4704B;
            color: #fff;
        }

        @media (max-width: 768px) {
            .container {
                flex-direction: column;
            }

            .sidebar {
                width: 100%;
            }
        }
    </style>
</head>

